{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build sensor project",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "sensor.c",
                "-o",
                "main.exe",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": "$gcc"
        }
    ]
}
